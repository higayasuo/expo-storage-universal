{
  "name": "expo-storage-universal",
  "version": "0.3.6",
  "description": "A universal storage implementation for Expo that works across all platforms. Features type-safe storage wrappers for strings and binary data.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run typecheck && vite build",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "prepare": "npm test && npm run build"
  },
  "keywords": [
    "expo",
    "storage",
    "universal"
  ],
  "author": "Yasuo Higa <higayasuo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "jsdom": "^26.0.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "base64-js": "^1.5.1"
  }
}
