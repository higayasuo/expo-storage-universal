{
  "name": "expo-storage-universal",
  "version": "0.1.0",
  "description": "A universal storage implementation for Expo that works across all platforms, including web. This package extends @react-native-async-storage/async-storage and expo-secure-store functionality by providing a consistent interface that works on web platforms and automatically switches implementations based on the platform.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run typecheck && vite build",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "expo",
    "storage",
    "universal",
    "async-storage",
    "secure-store"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "jsdom": "^26.0.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.8"
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": "^1.23.1",
    "expo-secure-store": "~14.0.1",
    "react-native": "~0.76.3"
  }
}
